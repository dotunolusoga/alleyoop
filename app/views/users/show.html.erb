          <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id),
              method: 'post', class:"btn btn-primary wide" %>
        </div>
      <% end %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Verification</div>
