<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Experience", experiences_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Outings", your_outings_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Reservations
      </div>
      <div class="panel-body">
        <% @experiences.each do |experience| %>
          <% experience.reservations.each do |reservation| %>
            <div class="row">
              <div class="col-md-2">
                <%= reservation.reservation_date.strftime('%v') %>
              </div>
              <div class="col-md-6">
                <%= link_to experience_path(reservation.experience) do %>
                  <%= image_tag reservation.experience.images[0].thumb.url %>
                <% end %>
              </div>
              <div class="col-md-2">
                <%= link_to user_path(reservation.user) do %>
                  <%= image_tag avatar_url(reservation.user), class:"img-circle avatar-medium" %>
                <% end %>
              </div>
              <div class="col-md-2 right">
                <h4>$<%= reservation.price %></h4>
              </div>
            </div>
            <hr />
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>
