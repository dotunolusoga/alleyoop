<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Experiences", experiences_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Outings", your_outings_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Experiences
      </div>
      <div class="panel-body">

        <% @experiences.each do |experience| %>
          <div class="row experience-list">
            <div class="col-md-2">
              <%= image_tag experience.image_uploads.first.image_url(:thumb) if experience.image_uploads.length > 0 %>
            </div>
            <div class="col-md-7">
              <h4><%= experience.experience_title %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to "Update", edit_experience_path(experience), class: "btn btn-primary" %>
            </div>
          </div>
          <hr />
        <% end %>

      </div>
    </div>
  </div>
</div>
