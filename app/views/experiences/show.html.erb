<div class="panel panel-default">
  <div class="panel-body">

    <!-- Image -->
    <div class="row">
      <div class="col-md-12">
        <%= image_tag @experience.images[0].url(), class: "img-responsive" if @experience.images.length > 0 %>
      </div>
    </div>

    <br />

    <!-- Main Info-->
    <div class="row">
     <div class="col-md-8">
       <div class="row">
         <div class="col-md-3 text-center">
           <%= image_tag avatar_url(@experience.user), class:"img-circle avatar-large" %><br /><br />
           <%= @experience.user.fullname%>
         </div>

         <div class="col-md-9">
           <h4><%= @experience.experience_title %></h4>
           <%= @experience.tagline %><br /><br />

           <div class="row text-center row-space-1">
             <div class="col-sm-3">
               <i class="fa fa-location-arrow fa-2x"></i>
             </div>
             <div class="col-sm-3">
               <i class="fa fa-users fa-2x"></i>
             </div>
             <div class="col-sm-3">
               <i class="fa fa-bed fa-2x"></i>
             </div>
             <div class="col-sm-3">
               <i class="fa fa-calendar fa-2x"></i>
             </div>
           </div>

           <div class="row text-center">
             <div class="col-sm-3">
               <%= @experience.experience_type %>
             </div>
             <div class="col-sm-3">
               <%= @experience.capacity %> <%= @experience.capacity > 1? "Guests" : "Guest" %>
             </div>
           </div>
         </div>
       </div>
     </div>

     <div class="col-md-4">
       <!-- Reservation form -->
     </div>
    </div>

    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h2>About This Experience</h2>
        <p><%= @experience.summary %></p>
      </div>
    </div>

    <!-- Amenities -->
    <div class="row">
      <div class="col-md-2">
        <p>Amenities</p>
      </div>
      <div class="col-md-10">
        <div class="row">
          <div class="col-md-6">
            <ul class="amenities">
              <li class=" <%= 'text-line-through' if !@experience.alcohol %>">Alcohol</li>
              <li class=" <%= 'text-line-through' if !@experience.internet %>">Internet</li>
              <li class=" <%= 'text-line-through' if !@experience.parking %>">Parking</li>
            </ul>
          </div>
          <div class="col-md-6">

          </div>
        </div>
      </div>

    </div>

    <!-- Carousel -->
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <% if @experience.images %>
            <ol class="carousel-indicators">
              <% @experience.images.each do |image| %>
                <li data-target="#myCarousel" data-slide-to="<%= image %>"></li>
              <% end %>
            </ol>
          <% end %>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <% if @experience.images %>
              <% @experience.images.each do |image| %>
                <div class="item <%= 'active' if image == @experience.images[0] %>">
                  <%= image_tag image.url %>
                </div>
              <% end %>
            <% end %>
          </div>


          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>

    <br />
    <hr />

    <!-- Google Map -->
    <div class="row">
      <div class="col-md-12">
        <div id="map"></div>

        <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['MAP_API_KEY']%>&callback=initialize"></script>

        <script>
          var myCoords = {lat: <%= @experience.latitude %>, lng: <%= @experience.longitude %>};

          function initialize() {
            var mapCanvas = document.getElementById('map');
            var mapOptions = {
              center: myCoords,
              zoom: 14,
              mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(mapCanvas, mapOptions);

            var marker = new google.maps.Marker({
              position: myCoords,
              animation: google.maps.Animation.DROP,
              map: map,
              title: '<%= @experience.location_name %>'
            });
          }
        </script>

      </div>
    </div>

  </div>
</div>
