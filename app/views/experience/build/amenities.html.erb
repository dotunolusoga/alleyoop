<div class="panel panel-default">
  <div class="panel-heading">
    Amenities...
  </div>

  <div class="panel-body">
    <div class="container">

      <%= simple_form_for @experience, method: :put,  url: wizard_path, html: { class: 'form-horizontal' },
          wrapper: :horizontal_form,
          wrapper_mappings: {
            check_boxes: :horizontal_radio_and_checkboxes,
            radio_buttons: :horizontal_radio_and_checkboxes,
            file: :horizontal_file_input,
            boolean: :horizontal_boolean } do |f| %>

        <div class="row">

          <div class="col-md-10">
            <div class="form-group">
              <%= f.input :food, as: :text, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-10">
            <div class="form-group">
              <%= f.input :drinks, as: :text, class: "form-control"%>
            </div>
          </div>

          <div class="col-md-10">
            <div class="form-group">
              <%= f.input :tickets, as: :text, class: "form-control"%>
            </div>
          </div>

          <div class="col-md-10">
            <div class="form-group", aria-describedby="helpBlock">
              <%= f.input :alcohol, as: :boolean, class: "form-control"%>
            </div>

          </div>

          <div class="col-md-10">
            <div class="form-group">
              <%= f.input :internet, as: :boolean, class: "form-control"%>
            </div>
          </div>

          <div class="col-md-10">
            <div class="form-group">
              <%= f.input :parking, as: :boolean, class: "form-control"%>
            </div>
          </div>




          <div class="actions col-md-10">
            <%= f.submit "Save & Continue", :class => "btn btn-primary" %>
          </div>

        </div>

      <% end %>

    </div>

  </div>
</div>
